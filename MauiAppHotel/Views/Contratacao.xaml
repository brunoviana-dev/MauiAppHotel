<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Contratacao"
             NavigationPage.HasNavigationBar = "False"
             BackgroundColor="{StaticResource Gray100}">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="10" >
        <Label Text="Cálculo da Diária" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>

        <Frame>
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, *, 2*">
                    <Label Grid.Row="0" Grid.Column="0" Text="Adultos:"/>
                    <Label Grid.Row="0" Grid.Column="1" TextColor="{StaticResource Primary}" Text="{Binding Value}" BindingContext="{x:Reference stpAdultos}"/>
                    <Stepper Grid.Row="0" Grid.Column="2" x:Name="stpAdultos" Minimum="0" Maximum="4" Increment="1"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="Crianças:"/>
                    <Label Grid.Row="1" Grid.Column="1" TextColor="{StaticResource Primary}" Text="{Binding Value}" BindingContext="{x:Reference stpCriancas}"/>
                    <Stepper Grid.Row="1" Grid.Column="2" x:Name="stpCriancas" Minimum="0" Maximum="4" Increment="1"/>
                </Grid>

                <Frame>
                    <VerticalStackLayout>
                        <Label Text="Suite:" FontAttributes="Bold" />
                        <Picker x:Name="pckQuarto" Title="Selecione o Quarto" ItemDisplayBinding="{Binding Descricao}"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame>
                    <VerticalStackLayout>
                        <Label Text="Período da Estadia" FontAttributes="Bold" />
                        
                        <HorizontalStackLayout>
                            <Label Text="Check-In:" />
                            <DatePicker x:Name="dtpckCheckIn" Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Check-Out:" />
                            <DatePicker x:Name="dtpckCheckOut" Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <Button Text="Avançar" HorizontalOptions="Center" Clicked="Button_Clicked"/>

            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>